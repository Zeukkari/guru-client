#!/bin/bash
temp=/tmp/diagnostics
target=$HOME/diagnostics
location=$(pwd)

pause(){
 read -n1 -rsp $'Press any key to continue or Ctrl+C to stop \n'
}

make_clean() {
	rm -rf $target/*
	cp -r $temp/diagnostics/* $target/ 
}

echo "updating installer tools"
mkdir $temp
mkdir $target
cd $temp
git clone -b master https://freesiinstall:Jrykv2FCZMEqcSjQYzLG@bitbucket.org/freesi/diagnostics.git && make_clean
cd $location
rm -rf $temp 
#echo 'Update ready, type "./run" to relaunch'
bash $target/run 